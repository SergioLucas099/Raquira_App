<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetallesSitio">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/BotonAtrasEditarSitio"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/boton_redondear"
                        android:backgroundTint="@color/red"
                        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/traducir" />

                        <androidx.coordinatorlayout.widget.CoordinatorLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp">

                            <ImageView
                                android:id="@+id/idioma_español"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/idioma_espanol" />

                            <ImageView
                                android:id="@+id/idioma_ingles"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/idioma_ingles" />

                        </androidx.coordinatorlayout.widget.CoordinatorLayout>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/DetallesNombreSitio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/alegreya_sc"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/DetallesImagen"
                    android:layout_width="350dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logo_principal"
                    android:layout_marginTop="25dp"/>

                <TextView
                    android:id="@+id/DetallesTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalles"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/alegreya_sc"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/DetallesSitioTuristico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem Ipsum es simplemente el texto de relleno de las imprentas y archivos de texto"
                    android:textSize="17dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/alegreya_sc"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/UbicacionTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ubicación"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/alegreya_sc"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/UbicacionSitioTuristico"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ubicacion"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/PuntuacionTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Puntuación: "
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/alegreya_sc" />

                    <TextView
                        android:id="@+id/puntuaciontotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/alegreya_sc"
                        android:textColor="@color/blue" />

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/blue"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/ComentariosTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comentarios"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/alegreya_sc"
                    android:layout_gravity="center"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Rv_Comentarios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/blue"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/CalificarLugarTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Califica este lugar"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/alegreya_sc"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/Puntuacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_orange_dark"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/alegreya_sc"
                    android:gravity="center"/>

                <RatingBar
                    android:id="@+id/R_Star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progressTint="@android:color/holo_orange_dark"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TextFieldAutor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/baseline_person_24"
                    android:layout_marginTop="20dp"
                    android:hint="Nombre del autor (Opcional)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/EditTextAutor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TextFieldComentario"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_baseline_text_fields_24"
                    android:layout_marginTop="10dp"
                    android:hint="Escribir un comentario (Opcional)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/EditTextComentario"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:inputType="text"/>

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/BotonCalificar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/boton_redondear"
                    android:fontFamily="@font/alegreya_sc"
                    android:text="Calificar"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/red" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>