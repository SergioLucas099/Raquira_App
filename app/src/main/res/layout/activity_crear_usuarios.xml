<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Crear_Usuarios">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/BotonAtrasCrearAdministradores"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
                    android:background="@drawable/boton_redondear"
                    android:backgroundTint="@color/red"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alegreya_sc"
                    android:text="Crear Administrador"
                    android:textAlignment="center"
                    android:textSize="32dp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="30dp">

                    <Button
                        android:id="@+id/Btn_Seleccionar_admin"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/boton_redondear"
                        android:fontFamily="@font/alegreya_sc"
                        android:text="Seleccionar Imagen"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        app:backgroundTint="@color/red" />

                    <Button
                        android:id="@+id/Btn_tomar_admin"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/boton_redondear"
                        android:fontFamily="@font/alegreya_sc"
                        android:text="Tomar Foto"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        app:backgroundTint="@color/red" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/Img_foto_admin"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/galeria"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:id="@+id/AvisoSeleccionImagenAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ninguna foto seleccionada"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/alegreya_sc"
                    android:layout_marginTop="10dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/UrlFotoAdmin"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/LinkImgAdmin"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="invisible"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_baseline_text_fields_24"
                    app:helperText="Requerido"
                    android:layout_marginTop="30dp"
                    android:hint="Nombre Administrador">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/EditTextNombreAdministrador"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_baseline_email_24"
                    app:helperText="Requerido"
                    android:layout_marginTop="10dp"
                    android:hint="Correo Administrador">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/EditTextCorreoAdministrador"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_baseline_password_24"
                    app:helperText="Requerido"
                    android:layout_marginTop="10dp"
                    android:hint="Contraseña Administrador">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/EditTextContraseñaUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/BotonCrearAdministrador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/boton_redondear"
                    android:fontFamily="@font/alegreya_sc"
                    android:text="Crear Administrador"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/red" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>