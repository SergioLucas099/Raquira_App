<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearSitio">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/BotonAtrasCrearSiito"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
                    android:background="@drawable/boton_redondear"
                    android:backgroundTint="@color/red"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alegreya_sc"
                    android:text="Lugar Turístico"
                    android:textAlignment="center"
                    android:textSize="32dp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="30dp">

                    <Button
                        android:id="@+id/Btn_Seleccionar"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/boton_redondear"
                        android:fontFamily="@font/alegreya_sc"
                        android:text="Seleccionar Imagen"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        app:backgroundTint="@color/red" />

                    <Button
                        android:id="@+id/Btn_tomar"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/boton_redondear"
                        android:fontFamily="@font/alegreya_sc"
                        android:text="Tomar Foto"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        app:backgroundTint="@color/red" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/Img_foto_turistica"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/galeria"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:id="@+id/UrlFotoSitio"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/AvisoSeleccionImagen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ninguna foto seleccionada"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/alegreya_sc"
                    android:layout_marginTop="10dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/LinkImg"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="invisible"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_baseline_text_fields_24"
                    app:helperText="Requerido"
                    android:layout_marginTop="30dp"
                    android:hint="Nombre">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/EditTextNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_baseline_article_24"
                    app:helperText="Requerido"
                    android:layout_marginTop="10dp"
                    android:hint="Detalles">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/EditTextDetalles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_baseline_map_24"
                    app:helperText="Requerido"
                    android:layout_marginTop="10dp"
                    android:hint="Url Ubicación Google Maps">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/EditTextUbicación"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/SeleccionCategoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/alegreya_sc"
                    android:layout_marginTop="20dp"
                    android:text="Seleccionar Categoría"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/ParqueBtn"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/parque" />

                            <TextView
                                android:id="@+id/ParqueBtnTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Parque"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:fontFamily="@font/alegreya_sc"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/HotelBtn"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/hotel" />

                            <TextView
                                android:id="@+id/HotelBtnTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hotel"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:fontFamily="@font/alegreya_sc"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/RestauranteBtn"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/restaurante"/>

                            <TextView
                                android:id="@+id/RestauranteBtnTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Restaurante"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:fontFamily="@font/alegreya_sc"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/TiendaBtn"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/tienda"/>

                            <TextView
                                android:id="@+id/TiendaBtnTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tienda"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:fontFamily="@font/alegreya_sc"/>

                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>

                <Button
                    android:id="@+id/BotonSubirSitioFirebase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/boton_redondear"
                    android:fontFamily="@font/alegreya_sc"
                    android:text="Subir Sitio Turístico"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/red" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>